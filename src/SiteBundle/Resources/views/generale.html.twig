{% extends "::template.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h1>sportNews</h1>
                <h3>l'actualité chaque jours </h3>
                <span class="icon-bar">
                    <i class="glyphicon glyphicon-tower" aria-hidden="true"></i>
                </span>
                <h2>Articles Récents</h2>
            </div>
        </div>
    </div>
    <!-- Page Content -->
    <div class="container">
         {% if is_granted("ROLE_ADMIN") %}
        <a href="{{path('formArticle')}}" class="btn btn-primary">Ajouter articles</a>
        <a href="{{path('mesBrouillons')}}" class="btn btn-primary">Voir mes brouillons</a>
         {% endif %}
        {% for article in articles %}
            <div class="row">

                <!-- Blog Post Content Column -->
            
                    <hr>
                    <div class="col-md-12" >
                        <div class="col-md-6" >
                            <!-- Preview Image -->
                            <img class="img-responsive" src="{{ asset(('uploads/img/')~article.image) }}" alt="">
                        </div>


                        <div class="col-md-6" >
                            <div class="article1">
                                <!-- Blog article -->

                                <!-- Title -->
                                <h1 class="titre">{{article.titre}}</h1>

                                <!-- Post Content -->
                                <p class="postgeneral">
                                    {{article.texte|truncate(400, true,' ...')}}
                                </p>
                                <a href="{{ path('idDetail', {'id':article.id}) }}">
                                    en voir +
                                </a>
                            </div>
                                    
                        </div>
                    </div>
              
            </div>
                                    <br/><br/>
        {% endfor %}
    </div>
    <!-- /.row -->


{% endblock %}
